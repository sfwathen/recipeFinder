<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.recipefinder.DishController">
   <children>
      <Hyperlink layoutX="14.0" layoutY="14.0" onAction="#goToPrevious" stylesheets="@link.css" text="&lt; BACK">
         <font>
            <Font name="DIN Condensed Bold" size="14.0" />
         </font>
      </Hyperlink>
      <Label fx:id="dishNameLabel" layoutX="43.0" layoutY="58.0" prefHeight="42.0" prefWidth="515.0" text="Dish Name">
         <font>
            <Font name="DIN Condensed Bold" size="32.0" />
         </font>
      </Label>
      <ListView fx:id="ingredientListView" layoutX="43.0" layoutY="100.0" prefHeight="166.0" prefWidth="515.0" />
      <Label fx:id="dishDescLabel" alignment="TOP_LEFT" layoutX="43.0" layoutY="273.0" prefHeight="113.0" prefWidth="515.0" text="Description" wrapText="true">
         <font>
            <Font name="DIN Condensed Bold" size="14.0" />
         </font>
      </Label>
      <Button fx:id="saveButton" layoutX="476.0" layoutY="67.0" mnemonicParsing="false" onAction="#addToSaved" prefHeight="27.0" prefWidth="81.0" text="+ Add to Saved">
         <font>
            <Font name="DIN Condensed Bold" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
